@model decimal?
@{
    ViewData["Title"] = "Chanda Calculator";
    var chandaTypes = ViewBag.ChandaTypes as List<ChandaType>;
    var calculatedAmount = ViewBag.CalculatedAmount as decimal?;
    var selectedChandaType = ViewBag.SelectedChandaType as string;
    var income = ViewBag.Income as decimal?;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chanda Calculator</h6>
    </div>
    <div class="card-body">
        <form asp-action="Calculator" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="income">Monthly Income</label>
                        <input type="number" step="0.01" class="form-control" id="income" name="income"
                               value="@income" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="chandaTypeId">Chanda Type</label>
                        <select class="form-control" id="chandaTypeId" name="chandaTypeId" required>
                            <option value="">-- Select Chanda Type --</option>
                            @foreach (var type in chandaTypes)
                            {
                                <option value="@type.Id" selected="@(selectedChandaType == type.Name)">
                                    @type.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">
                <i class="bi bi-calculator"></i> Calculate
            </button>
        </form>

        @if (calculatedAmount.HasValue)
        {
            <div class="alert alert-success mt-4">
                <h4 class="alert-heading">Calculation Result</h4>
                <p>For @selectedChandaType with income of @income?.ToString("C"), your Chanda amount is:</p>
                <h3 class="text-center">@calculatedAmount.Value.ToString("C")</h3>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
            color: white;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px 15px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }

        .alert-success {
            border-radius: 8px;
            background-color: rgba(25, 135, 84, 0.1);
            border-color: rgba(25, 135, 84, 0.2);
        }
    </style>
}