@model IEnumerable<Jamaat>

@{
    ViewData["Title"] = "Jamaats";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Jamaat Management</h6>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-circle"></i> Add New Jamaat
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Name</th>
                        <th>Circuit</th>
                        <th>Zone</th>
                        <th>Region</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Circuit?.Name</td>
                            <td>@item.Circuit?.Zone?.Name</td>
                            <td>@item.Circuit?.Zone?.Region?.Name</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary edit-btn"
                                            data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#editModal">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createModalLabel">Add New Jamaat</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createForm" asp-action="Create">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Name" class="control-label">Jamaat Name</label>
                        <input id="Name" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="CircuitId" class="control-label">Circuit</label>
                        <select id="CircuitId" name="CircuitId" class="form-control" required>
                            <option value="">-- Select Circuit --</option>
                            @foreach (var circuit in ViewBag.Circuits)
                            {
                                <option value="@circuit.Id">@circuit.Name (@circuit.Zone?.Name)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create Jamaat</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editModalLabel">Edit Jamaat</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editForm" asp-action="Edit">
                <input type="hidden" id="editId" name="Id" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="editName" class="control-label">Jamaat Name</label>
                        <input id="editName" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="editCircuitId" class="control-label">Circuit</label>
                        <select id="editCircuitId" name="CircuitId" class="form-control" required>
                            <option value="">-- Select Circuit --</option>
                            @foreach (var circuit in ViewBag.Circuits)
                            {
                                <option value="@circuit.Id">@circuit.Name (@circuit.Zone?.Name)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deleteForm" asp-action="Delete">
                <input type="hidden" id="deleteId" name="id" />
                <div class="modal-body">
                    <p>Are you sure you want to delete this jamaat? This action cannot be undone.</p>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This will affect all members associated with this jamaat.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete Jamaat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#dataTable').DataTable();

            // Edit button click handler
            $('.edit-btn').click(function() {
                var jamaatId = $(this).data('id');
                $.get('@Url.Action("Edit", "Jamaat")/' + jamaatId, function(data) {
                    $('#editId').val(data.id);
                    $('#editName').val(data.name);
                    $('#editCircuitId').val(data.circuitId);
                }).fail(function() {
                    alert('Error loading jamaat data');
                });
            });

            // Delete button click handler
            $('.delete-btn').click(function() {
                var jamaatId = $(this).data('id');
                $('#deleteId').val(jamaatId);
            });

            // Form submission handlers
            $('#createForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#createModal');
            });

            $('#editForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#editModal');
            });

            $('#deleteForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#deleteModal');
            });

            function submitForm(form, modalId) {
                $.ajax({
                    url: $(form).attr('action'),
                    type: 'POST',
                    data: $(form).serialize(),
                    success: function(response) {
                        if (response.success) {
                            $(modalId).modal('hide');
                            window.location.reload();
                        } else {
                            $(modalId + ' .modal-body').prepend(
                                '<div class="alert alert-danger">' +
                                'Please fix the errors below and try again.' +
                                '</div>');
                        }
                    },
                    error: function() {
                        alert('An error occurred');
                    }
                });
            }
        });
    </script>
}