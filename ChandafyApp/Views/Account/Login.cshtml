@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    Layout = null; // No layout for the login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChandafyApp</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --dark-gray: #212529; /* Black/Dark Gray */
            --blue-gray: #6C757D; /* Blue Gray */
            --light-gray: #F8F9FA; /* White/Light Gray for background */
            --medium-gray: #E9ECEF; /* For hover states on light backgrounds */
            --white: #FFFFFF; /* Pure White */
        }

        body {
            background-color: var(--light-gray); /* Overall background */
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: var(--dark-gray); /* Default text color */
        }

        .login-container {
            width: 100%;
            max-width: 450px; /* Slightly wider for better presentation */
            margin: 0 auto;
            padding: 15px; /* Add some padding for smaller screens */
        }

        .login-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15); /* Enhanced shadow */
            overflow: hidden;
            background-color: var(--white); /* White card background */
        }

        .login-header {
            background-color: var(--dark-gray); /* Solid dark gray header */
            color: var(--white);
            padding: 2rem; /* Increased padding */
            text-align: center;
        }

        .login-logo {
            font-size: 2.25rem; /* Slightly larger logo */
            font-weight: 700;
            margin-bottom: 0.75rem; /* Increased margin */
            display: flex; /* Use flex for vertical alignment */
            align-items: center;
            justify-content: center;
        }

            .login-logo i {
                margin-right: 0.75rem; /* Increased margin */
                font-size: 2.5rem; /* Larger icon */
                color: var(--blue-gray); /* Blue-gray icon for accent */
            }

        .login-header p {
            color: rgba(255, 255, 255, 0.8); /* Slightly muted description text */
            font-size: 1.1rem;
        }

        .login-body {
            padding: 2.5rem; /* Increased padding */
        }

        .form-label {
            font-weight: 600;
            color: var(--dark-gray); /* Dark label text */
            margin-bottom: 0.5rem;
        }

        .form-control {
            height: 50px; /* Taller input fields */
            border-radius: 8px;
            border: 1px solid #CED4DA; /* Softer border color */
            padding-left: 15px;
            font-size: 1rem;
            color: var(--dark-gray);
        }

            .form-control:focus {
                border-color: var(--blue-gray); /* Blue-gray focus border */
                box-shadow: 0 0 0 0.25rem rgba(108, 117, 125, 0.25); /* Blue-gray shadow on focus */
            }

        .input-group-text {
            background-color: var(--white);
            border: 1px solid #CED4DA; /* Consistent border */
            border-right: none;
            border-radius: 8px 0 0 8px; /* Rounded left side only */
            color: var(--blue-gray); /* Blue-gray icon color */
        }

        /* Adjust input field border-radius when used with input-group-text */
        .input-group .form-control {
            border-left: none; /* Remove left border */
            border-radius: 0 8px 8px 0; /* Rounded right side only */
        }

        .form-floating label {
            padding-left: 15px;
            color: #6C757D; /* Label color for floating labels */
        }

        .btn-login {
            background-color: var(--blue-gray); /* Solid blue-gray button */
            border: none;
            height: 50px; /* Taller button */
            border-radius: 8px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            color: var(--white); /* White text on button */
            display: flex; /* Flex to center icon and text */
            align-items: center;
            justify-content: center;
        }

            .btn-login:hover {
                background-color: #5A6268; /* Darker blue-gray on hover */
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3); /* Enhanced shadow on hover */
            }

            .btn-login i {
                margin-right: 0.75rem;
            }

        .forgot-link {
            color: var(--blue-gray); /* Blue-gray link color */
            transition: color 0.3s ease;
            text-decoration: none;
            font-weight: 500;
        }

            .forgot-link:hover {
                color: var(--dark-gray); /* Darker on hover */
                text-decoration: underline;
            }

        .divider {
            position: relative;
            text-align: center;
            margin: 2rem 0; /* More vertical space */
            color: var(--blue-gray); /* Blue-gray for divider text */
        }

            .divider::before {
                content: "";
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background-color: #E0E0E0; /* Lighter gray line */
                z-index: 1;
            }

            .divider span {
                position: relative;
                display: inline-block;
                padding: 0 15px; /* More padding for text */
                background-color: var(--white); /* Match card background */
                z-index: 2;
                font-size: 0.95rem;
            }

        .remember-me .form-check-input {
            width: 1.25em; /* Larger checkbox */
            height: 1.25em;
            border-color: #ADB5BD; /* Softer border */
        }

            .remember-me .form-check-input:checked {
                background-color: var(--blue-gray); /* Blue-gray checked state */
                border-color: var(--blue-gray);
            }

        .remember-me .form-check-label {
            color: var(--dark-gray); /* Dark text for remember me */
            font-weight: 500;
        }

        .alert-danger {
            background-color: #F8D7DA; /* Lighter red for alert background */
            border-color: #F5C6CB;
            color: #721C24; /* Darker red for text */
            border-radius: 8px;
            padding: 1rem 1.5rem;
        }

            .alert-danger .btn-close {
                color: #721C24; /* Darker red for close button */
            }

                .alert-danger .btn-close:focus {
                    box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
                }

            .alert-danger i {
                color: #721C24;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <i class="bi bi-coin"></i>ChandafyApp
                </div>
                <p class="mb-0">Sign in to your account</p>
            </div>

            <div class="login-body">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div><i class="bi bi-exclamation-triangle-fill me-2"></i>@error.ErrorMessage</div>
                        }
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" asp-controller="Account" method="post" aria-label="Login Form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <div class="mb-3">
                        <label for="email" class="form-label">AIMS Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <input type="text" name="email" class="form-control" id="email" placeholder="Enter your AIMS number" required aria-label="AimsNumber" autocomplete="username"> @* Changed autocomplete to username for better practice *@
                        </div>
                    </div>

                    <div class="mb-4">
                        @* Increased margin-bottom for better spacing *@
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required aria-label="Password" autocomplete="current-password">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        @* Increased margin-bottom for better spacing *@
                        <div class="form-check remember-me">
                            @* Used form-check for proper bootstrap styling of checkbox *@
                            <input type="checkbox" id="remember" name="remember" class="form-check-input">
                            <label for="remember" class="form-check-label">Remember me</label>
                        </div>
                        <a href="/Account/ForgotPassword" class="forgot-link">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-primary btn-login w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>