@model ChandafyApp.Controllers.CircuitController.MemberViewModel
@{
    ViewData["Title"] = "Collector Dashboard";
}

<div class="container-fluid">
    <div class="dashboard-header mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-person-lines-fill me-2"></i>Collector Dashboard
        </h1>
    </div>

    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Projected Amount
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalProjectedAmount.ToString("C")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-cash-stack fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        Collection Progress
                    </div>
                    <div class="row no-gutters align-items-center">
                        <div class="col-auto">
                            <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                @Model.PercentageComplete.ToString("P1")
                            </div>
                        </div>
                        <div class="col">
                            <div class="progress progress-sm mr-2 mt-2">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @(Model.PercentageComplete * 100)%"
                                     aria-valuenow="@(Model.PercentageComplete * 100)"
                                     aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                        Members Yet to Pay
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                        @Model.MembersYetToPay.Count
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Members Yet to Pay</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover datatable">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Name</th>
                            <th>Expected Amount</th>
                            <th>Contact</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.MembersYetToPay?.Any() == true)
                        {
                            foreach (var member in Model.MembersYetToPay)
                            {
                                <tr>
                                    <td>@member.FirstName @member.LastName</td>
                                    <td>GHS 0.00</td> <!-- Placeholder for ExpectedAmount -->
                                    <td>@member.ContactNumber</td>
                                    <td>@member.Email</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">
                                    All members have paid.
                                </td>
                            </tr>
                        };
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link rel="stylesheet" href="~/lib/datatable/datatables.min.css" />
}
@section Scripts {
    <script src="~/lib/datatable/datatables.js"></script>
}
