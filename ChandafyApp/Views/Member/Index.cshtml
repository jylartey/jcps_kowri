@section Scripts {

    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#dataTable').DataTable();

            // Edit button click handler
            $(document).on('click', '.edit-btn', function() {
                var userId = $(this).data('id');
                $.get('@Url.Action("Edit", "Member")/' + userId, function(data) {
                    if (data.success) {
                        $('#editId').val(data.data.id);
                        $('#editAIMS').val(data.data.aims);
                        $('#editFirstName').val(data.data.firstName);
                        $('#editLastName').val(data.data.lastName);
                        $('#editEmail').val(data.data.email);
                        $('#editContactNumber').val(data.data.contactNumber);
                        if (data.data.dateOfBirth) {
                            var dob = new Date(data.data.dateOfBirth);
                            var formattedDob = dob.toISOString().split('T')[0];
                            $('#editDateOfBirth').val(formattedDob);
                        }
                        $('#editJamaatId').val(data.data.jamaatId);
                        // Clear all role checkboxes
                        $('.edit-role-checkbox').prop('checked', false);

                        // Check the roles the user has
                        if (data.data.selectedRoles && data.data.selectedRoles.length > 0) {
                            data.data.selectedRoles.forEach(function(role) {
                                $('#editRole_' + role).prop('checked', true);
                            });
                        }
                        else{

                        }
                    }
                    else {
                        $('#editErrorAlert').removeClass('d-none').html(data.error || 'Error loading member data');
                    }
                }).fail(function() {
                    alert('Error loading member data');
                });
            });

            $(document).on('click', '.reset-password-btn', function() {
                var userId = $(this).data('id');
                var userEmail = $(this).data('email');

                $('#resetPasswordId').val(userId);
                $('#resetPasswordEmail').val(userEmail);
                $('#NewPassword').val('');
                $('#ConfirmPassword').val('');
                $('#resetPasswordErrorAlert').addClass('d-none').html('');
            });
            // Delete button click handler
            $(document).on('click', '.delete-btn', function() {
                var userId = $(this).data('id');
                $('#deleteId').val(userId);
            });

            // Form submission handlers
            $('#createForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#createModal', '#createErrorAlert');
            });

            $('#editForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#editModal', '#editErrorAlert');
            });

            $('#resetPasswordForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#resetPasswordModal', '#resetPasswordErrorAlert');
            });

            $('#deleteForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#deleteModal');
            });

            function submitForm(form, modalId, errorAlertId) {
                var $form = $(form);
                var $modal = $(modalId);

                if (errorAlertId) {
                    $(errorAlertId).addClass('d-none').html('');
                }
                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    success: function(response) {
                        if (response.success) {
                            $(modalId).modal('hide');
                            window.location.reload();
                        } else {
                            if (errorAlertId) {
                                var errorHtml = '';
                                if (response.message) {
                                    errorHtml += response.message;
                                }
                                if (response.errors && response.errors.length > 0) {
                                    errorHtml += '<ul>';
                                    response.errors.forEach(function(error) {
                                        errorHtml += '<li>' + error + '</li>';
                                    });
                                    errorHtml += '</ul>';
                                }
                                $(errorAlertId).removeClass('d-none').html(errorHtml);
                            }
                        }
                    },
                    error: function(xhr) {
                        if (errorAlertId) {
                            var errorMessage = 'An error occurred while processing your request.';
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMessage = xhr.responseJSON.message;
                            }
                            $(errorAlertId).removeClass('d-none').html(errorMessage);
                        }
                    }
                });
            }
        });
    </script>
}