@model ChandafyApp.Models.FiscalYear

<span id="currentFiscalYearDisplay" class="text-white">
    @* Added a specific ID for easier JS targeting *@
    @if (Model != null)
    {
        <span class="fw-bold">@Model.Period</span>
        <span class="text-muted ms-1">(@Model.StartDate.ToString("MMM d")-@Model.EndDate.ToString("MMM d"))</span>
    }
    else
    {
        <span class="text-warning">No active fiscal year</span>
    }
</span>