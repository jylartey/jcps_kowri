@model IEnumerable<PaymentMethod>

@{
    ViewData["Title"] = "Payment Methods";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Payment Method Management</h6>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus-circle"></i> Add New Payment Method
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Name</th>
                        <th>Rule</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Rule</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary edit-btn"
                                            data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#editModal">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createModalLabel">Add New Payment Method</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <form asp-action="Create">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Name" class="control-label">Name</label>
                        <input id="Name" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Rule" class="control-label">Rule</label>
                        <textarea id="Rule" name="Rule" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create Payment Method</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editModalLabel">Edit Payment Method</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <form id="editForm" asp-action="Edit">
                <input type="hidden" id="editId" name="Id" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="editName" class="control-label">Name</label>
                        <input id="editName" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="editRule" class="control-label">Rule</label>
                        <textarea id="editRule" name="Rule" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <form id="deleteForm" asp-action="Delete">
                <input type="hidden" id="deleteId" name="id" />
                <div class="modal-body">
                    <p>Are you sure you want to delete this payment method? This action cannot be undone.</p>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This will affect all payments using this method.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete Payment Method</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#dataTable').DataTable({
                
            });

            // Edit button click handler
            $('.edit-btn').click(function() {
                var paymentMethodId = $(this).data('id');
                $.get('@Url.Action("Edit", "PaymentMethod")/' + paymentMethodId, function(data) {
                    $('#editId').val(data.id);
                    $('#editName').val(data.name);
                    $('#editRule').val(data.rule);
                }).fail(function() {
                    alert('Error loading payment method data');
                });
            });

            // Delete button click handler
            $('.delete-btn').click(function() {
                var paymentMethodId = $(this).data('id');
                $('#deleteId').val(paymentMethodId);
            });

            // Form submission handlers
            $('#editForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#editModal');
            });

            $('#deleteForm').submit(function(e) {
                e.preventDefault();
                submitForm(this, '#deleteModal');
            });

            function submitForm(form, modalId) {
                $.ajax({
                    url: $(form).attr('action'),
                    type: 'POST',
                    data: $(form).serialize(),
                    success: function(response) {
                        if (response.success) {
                            $(modalId).modal('hide');
                            window.location.reload();
                        } else {
                            // Handle validation errors
                            $(modalId + ' .modal-body').html(response);
                        }
                    },
                    error: function() {
                        alert('An error occurred');
                    }
                });
            }
        });
    </script>
}